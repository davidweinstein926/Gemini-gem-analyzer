                info_lines.append("â€¢ Computational feature detection")
                info_lines.append("â€¢ Advanced algorithmic analysis")  
                info_lines.append("â€¢ Automated baseline, peaks, mounds")
            
            light_descriptions = {
                "bh": "â€¢ Broad absorption features and mounds\nâ€¢ General mineral identification\nâ€¢ Wide wavelength range analysis",
                "l": "â€¢ High-resolution sharp features\nâ€¢ Natural vs synthetic detection\nâ€¢ Precision wavelength analysis",
